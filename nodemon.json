{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules"
    ],
    "ignoreRoot": [".git", "node_modules", "bower_components", ".sass-cache"],
    "verbose": false,
    "execMap": {
        "js": "node --harmony"
    },
    "env": {
        "NODE_ENV": "development",
        "DEBUG": "*,-nodemon:*,-nodemon,-knex:pool"
    },
    "ext": "js json"
}
